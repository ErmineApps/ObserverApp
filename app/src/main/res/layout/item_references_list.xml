<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:background="@color/colorFonItem"
              android:padding="5dp">

    <ImageView
        android:id="@+id/imageView_item_references_foto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@color/colorButtonVolationMapNo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_item_references_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Распитие алкоголя"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView_item_references_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Воронеж"
                android:textColor="?attr/actionMenuTextColor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_item_references_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="Пьют же гады, вот бы их наказали и отправиили в жоrewrwe rwe rwer we rwe rwe r we rew rwe rwe пу мира"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_comment_black_24dp"/>

            <TextView
                android:id="@+id/textView_item_references_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="34"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView_item_references_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:gravity="right|center_vertical"
                android:text="2 часа назад"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
