<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLayout_add_message"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorFonTranspaerent"
              android:clickable="true"
              android:gravity="bottom"
              android:orientation="vertical"
              android:weightSum="1">

    <Button
        android:id="@+id/button_add_message_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.00"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:maxHeight="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:maxHeight="150dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_add_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.1"
                android:background="@android:color/background_light"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"
                android:hint="напишите комментарий"
                android:inputType="textMultiLine|textLongMessage"
                android:maxHeight="50dp"
                android:maxLines="12"
                android:padding="5dp"
                android:textColor="?attr/actionMenuTextColor"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:orientation="horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/imageButton_add_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="false"
                android:background="#00ffffff"
                android:focusable="false"
                android:padding="10dp"
                android:tint="@color/colorNo"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_menu_send"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
